@model IEnumerable<IdentityRole> //IqueryAble dönüyor actiondan.
@* @model List<IdentityRole> Bunu demek için ToList yapmalısın actionda admin indexte yaptığın gibi *@

<div class="row">
    <div class="container">
        <div class="col-md-12">
            <h1 class="h3">Admin Roles</h1> <hr>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <td style="width: 250px;">Id</td>
                        <td >Role Name</td>
                        <td style="width: 150px;"></td>

                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() > 0)
                    {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>
                                <a href="/admin/role/@item.Id" class="btn btn-primary btn-sm mr-2">Edit</a>
                                <form action="/Admin/DeleteRole" method="post" style="display: inline;">
                                    <input type="hidden" name="RoleId" value="@item.Id">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                    } 
                    }
                    else 
                    {
                    <div class="alert alert-warning">
                        <h3>No Roles</h3>
                    </div> 
                    }
                </tbody>
                <tfoot>
                    <a href="/admin/roleCreate" class="btn btn-primary mb-3">Add Role</a>
                </tfoot>
            </table>
        </div>
    </div>
</div>